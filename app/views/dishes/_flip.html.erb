<div class = "outer-card">
  <div class = "card" id="card_<%= dish.url %>">
    <div class="front side">
      <div class = "card_pic">
          <% if dish.photos.count > 0 %>
            <%= image_tag dish.photos.first.image.url(:medium), class: "dish_photo" %>
          <% else %>
            <%= image_tag 'no_photos.png' %>
          <% end %>
      </div>
      <div class="card_desc">
        <div class="card_url"><%= link_to dish.name, "/#{dish.restaurant.url}/#{dish.url}" %></div>
      </div>

      <div class="back side">
      <div class="dish_back">
        <%= dish.restaurant.name %><br>
        <%= dish.name %><br><br>
        <%= dish.description %><br>
        <%= link_to "View More Images", "/#{@restaurant.url}/#{dish.url}" %>
      </div>
    </div>
    </div>
  </div>
</div>