<div class="card">
  <p>Name: <%= @dish.name.titleize %></p>
  <p>Price: <%= @dish.price %></p>

  <section class="main-content"> 
    <h2>Preview:</h2>
    <p><img src="about:blank" alt="" id="show-picture"></p>
    <p id="error"></p>
  </section>

  <p>Category: <%= @dish.category %> </p>
  <p>Description: <%= @dish.description %></p>
</div>

<%= form_for :dish do |f| %>
  <div class="field">
    <input type="file" id="take-picture" accept="image/*">
  </div>
  <div class="actions">
    <%= f.submit 'Submit Photo' %>
  </div>
<% end %>


<div class="field">
  <%= f.label :image %><br />
  <%= f.file_field :image %>
</div>