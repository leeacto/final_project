<div class="show_dish">
  
  <p class="dish_name">Name: <%= @dish.name.titleize %></p>
  <p class="dish_price">Price: <%= @dish.price %></p>
  <p class="dish_description">Description: <%= @dish.description %></p>
      <%= @photos.count %>

  <label id="filesize"></label><br> 
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <% @photos.each do |photo| %>
        <div class="swiper-slide">
          <%= image_tag photo.image.url(:medium), class: "dish_photo" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= form_for(@photo) do |f| %>
    <div class="field">
      <%= hidden_field_tag 'photo[dish_id]', @dish.id %>
      <%= f.file_field :image, id: "take-picture", accept: "image/*"%>
    </div>
    <table>
      <tr>
        <td>
          <div id="save_to_db">
            <%= f.submit 'Save to database'%>
          </div>
        </td>
        <td>
          <div id="floatingBarst">.........</div>
        </td>
        <td> 
          <div id="floatingBarsG">
            <div class="blockG" id="rotateG_01"></div>
            <div class="blockG" id="rotateG_02"></div>
            <div class="blockG" id="rotateG_03"></div>
            <div class="blockG" id="rotateG_04"></div>
            <div class="blockG" id="rotateG_05"></div>
            <div class="blockG" id="rotateG_06"></div>
            <div class="blockG" id="rotateG_07"></div>
            <div class="blockG" id="rotateG_08"></div>
          </div>
        </td>
      </tr>
    </table>
  <% end %>
</div>

