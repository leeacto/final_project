<%= form_for [restaurant, dish],:html => {class: 'pure-form', id: 'dishnew'}  do |f|%>
  <%= render partial: 'shared/error_messages', :locals => {:dish => dish }%>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :category %>
  <%= f.text_field :category %><br>
  
  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.hidden_field :restname, :value => restaurant.url %>
  <%= f.submit %>
<% end %>