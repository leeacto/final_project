<meta name="viewport" content="initial-scale=1.0, user-scalable=no">

<h1>Restaurant List (Please Rename Me) </h1>

<div class="pure-g-r">
  <div class="pure-u-1-3">
    <div class="pure-u-1">
      <%= form_tag restaurants_path, :id => "search_form", :method => 'get', class: "pure-form" do %>
        <fieldset>
          <%= text_field_tag :search, params[:search], :id => "search_field" %>
          <%= submit_tag "Search", :class => "pure-button ", :name => nil %>
        </fieldset>
      <% end %>
      <%= link_to "Add a Restaurant", new_restaurant_path %>
   
      <div id="live-search">
        <div class="l-box">
          <%= render "live_search", :object => @restaurants %>
        </div>
      </div>
    </div>
  </div>
</div>